version: '3'

services:
  anonymousoverflow:
    container_name: anonymousoverflow
    image: codeberg.org/aryak/anonymousoverflow-docker-builds:latest@sha256:3dd33da5cd8c05a96cc74658a94cabd7ecdf90b38d1cf25788520a1639995ca4
    environment:
      - APP_URL=overflow.xn--hackerhhle-kcb.org
      - JWT_SIGNING_SECRET={{ anonymousoverflow_signing_secret }}
    restart: unless-stopped
    read_only: true
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    networks:
      - anonymousoverflow

networks:
  anonymousoverflow:
    name: anonymousoverflow
