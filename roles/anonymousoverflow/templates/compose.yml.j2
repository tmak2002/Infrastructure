version: '3'

services:
  anonymousoverflow:
    container_name: anonymousoverflow
    image: codeberg.org/aryak/anonymousoverflow-docker-builds:latest@sha256:51f40f0585fd25405b698c00ac4d7b07fa725d8d588f86dcf4db04bb77b37c97
    environment:
      - APP_URL=overflow.xn--hackerhhle-kcb.org
      - JWT_SIGNING_SECRET={{ anonymousoverflow_signing_secret }}
    restart: unless-stopped
    read_only: true
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    networks:
      - anonymousoverflow

networks:
  anonymousoverflow:
    name: anonymousoverflow
