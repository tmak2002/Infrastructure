version: '3'

services:
  redis:
    container_name: redis
    image: redis:alpine@sha256:a3e82d34456f5d012dcbf542b564c39697c14dc4225cf3d29b3278fca041ad15
    restart: unless-stopped
    command: redis-server --save "" --appendonly "no"
    tmpfs:
      - /var/lib/redis
    cap_drop:
      - ALL
    cap_add:
      - SETGID
      - SETUID
      - DAC_OVERRIDE
    networks:
      - searxng_in

  searxng:
    container_name: searxng
    image: searxng/searxng:latest@sha256:3f731639e9ead66ed9518e12bada547f174fea494f2fcfb728193c9e6f220bc5
    restart: unless-stopped
    volumes:
      - ./settings.yml:/etc/searxng/settings.yml
    environment:
      - SEARXNG_BASE_URL=https://searxng.xn--hackerhhle-kcb.org
      - SEARXNG_REDIS_URL=redis://redis
      - SEARXNG_SECRET="{{ searxng_secret_key }}"
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    logging:
      driver: "json-file"
      options:
        max-size: "1m"
        max-file: "1"
    networks:
      - searxng_ex
      - searxng_in

networks:
  searxng_ex:
    name: searxng_ex
  searxng_in:
    name: searxng_in
