version: '3'

services:
  redis:
    container_name: redis
    image: redis:alpine@sha256:6a7b3c6e3a6854424d96953172cac1ca97f0fc90094bcc479f3949e29bb053af
    restart: unless-stopped
    command: redis-server --save "" --appendonly "no"
    tmpfs:
      - /var/lib/redis
    cap_drop:
      - ALL
    cap_add:
      - SETGID
      - SETUID
      - DAC_OVERRIDE

  searxng:
    container_name: searxng
    image: searxng/searxng:latest@sha256:044e0f714699747e3a8c37cf90308d140d4772b4fd74adf3ef57b1b4cb814892
    restart: unless-stopped
    ports:
     - "127.0.0.1:65529:8080"
    volumes:
      - ./settings.yml:/etc/searxng/settings.yml
    environment:
      - SEARXNG_BASE_URL=https://searxng.xn--hackerhhle-kcb.org
      - SEARXNG_REDIS_URL=redis://redis
      - SEARXNG_SECRET="{{ searxng_secret_key }}"
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    logging:
      driver: "json-file"
      options:
        max-size: "1m"
        max-file: "1"
