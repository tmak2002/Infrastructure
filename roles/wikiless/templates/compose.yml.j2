services:
  wikiless:
    container_name: wikiless
    image: ghcr.io/metastem/wikiless:latest
    restart: unless-stopped
    environment:
      # see config.js.template for more settings
      DOMAIN: wikiless.xn--hackerhhle-kcb.org
      DEFAULT_LANG: en
      HTTP_ADDR: 0.0.0.0
      REDIS_URL: redis://wikiless-redis
      TRUST_PROXY: true
    ports:
      - 127.0.0.1:65528:8080
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    depends_on:
      - redis

  redis:
    image: redis:alpine
    container_name: wikiless-redis
    restart: unless-stopped
    user: nobody
    read_only: true
    tmpfs:
      - /data:size=10M,mode=0770,uid=65534,gid=65534,noexec,nosuid,nodev
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - SETGID
      - SETUID
      - DAC_OVERRIDE