version: "3"

services:
  quetre:
    container_name: quetre
    image: quay.io/pussthecatorg/quetre:latest@sha256:7fdd5943a7e0a9eb68101a14ac66fe05c1f746949ccc8246fda037c9c2d23a2f
    restart: unless-stopped
    environment:
      - "NODE_ENV=production"
      - "PORT=3000"
